{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OrderService",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RedDog.OrderService",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build MakeLineService",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RedDog.MakeLineService",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build ReceiptGenerationService",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RedDog.ReceiptGenerationService",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build LoyaltyService",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RedDog.LoyaltyService",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build VirtualWorker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RedDog.VirtualWorker",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build VirtualCustomers",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RedDog.VirtualCustomers",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Optimize DBContext",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "dbcontext",
                "optimize",
                "-p",
                "RedDog.AccountingService",
                "-n",
                "RedDog.AccountingModel",
                "-o",
                "${workspaceFolder}/RedDog.AccountingModel/CompiledModels",
                "-c",
                "AccountingContext"
            ],
            "options": {
                "env": {
                    "DAPR_GRPC_PORT": "5701"
                }
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "Dapr AccountingService",
            "group": "build"
        },
        {
            "label": "Build AccountingService",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RedDog.AccountingService",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": "Optimize DBContext",
            "group": "build"
        },
        {
            "label": "Build Bootstrapper",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RedDog.Bootstrapper",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build Solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Dapr OrderService",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "order-service",
                "--components-path",
                "${workspaceFolder}/manifests/local/branch",
                "--app-port",
                "5100",
                "--dapr-grpc-port",
                "5101",
                "--dapr-http-port",
                "5180"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr MakeLineService",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "make-line-service",
                "--components-path",
                "${workspaceFolder}/manifests/local/branch",
                "--app-port",
                "5200",
                "--dapr-grpc-port",
                "5201",
                "--dapr-http-port",
                "5280"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr ReceiptGenerationService",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "receipt-generation-service",
                "--components-path",
                "${workspaceFolder}/manifests/local/branch",
                "--app-port",
                "5300",
                "--dapr-grpc-port",
                "5301",
                "--dapr-http-port",
                "5380"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr LoyaltyService",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "loyalty-service",
                "--components-path",
                "${workspaceFolder}/manifests/local/branch",
                "--app-port",
                "5400",
                "--dapr-grpc-port",
                "5401",
                "--dapr-http-port",
                "5480"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr AccountingService",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "accounting-service",
                "--components-path",
                "${workspaceFolder}/manifests/local/branch",
                "--app-port",
                "5700",
                "--dapr-grpc-port",
                "5701",
                "--dapr-http-port",
                "5780"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "beginsPattern": "^.*Starting Dapr.*",
                    "endsPattern": "^.*You're up and running!.*"
                }
            }
        },
        {
            "label": "Dapr Stop AccountingService",
            "command": "dapr",
            "args": [
                "stop",
                "accounting-service"
            ]
        },
        {
            "label": "Dapr AccountingService (Corp)",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "accounting-service-corp",
                "--components-path",
                "${workspaceFolder}/manifests/local/corporate",
                "--app-port",
                "6700",
                "--dapr-grpc-port",
                "6701",
                "--dapr-http-port",
                "6780"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr VirtualWorker",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "virtual-worker",
                "--components-path",
                "${workspaceFolder}/manifests/local/branch",
                "--app-port",
                "5500",
                "--dapr-grpc-port",
                "5501",
                "--dapr-http-port",
                "5580"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr VirtualCustomers",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "virtual-customers",
                "--components-path",
                "${workspaceFolder}/manifests/local/branch",
                "--dapr-grpc-port",
                "5601",
                "--dapr-http-port",
                "5680"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr UI",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "reddog-ui",
                "--components-path",
                "${workspaceFolder}/manifests/local/branch",
                "--dapr-grpc-port",
                "5901",
                "--dapr-http-port",
                "5980"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr Bootstrapper",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "bootstrapper",
                "--components-path",
                "${workspaceFolder}/manifests/local/branch",
                "--dapr-grpc-port",
                "5801",
                "--dapr-http-port",
                "5880"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr (All Services)",
            "dependsOn": [
                "Dapr OrderService",
                "Dapr MakeLineService",
                "Dapr LoyaltyService",
                "Dapr ReceiptGenerationService",
                "Dapr AccountingService",
                "Dapr VirtualWorker",
                "Dapr VirtualCustomers",
                "Dapr UI"
            ],
            "problemMatcher": []
        }
    ]
}