                "run",
                "--app-id",
                "order-service",
                "--components-path",
                "${workspaceFolder}/components/local",
                "--app-port",
                "5100",
                "--dapr-grpc-port",
                "5101",
                "--dapr-http-port",
                "5180"
            ],
            "problemMatcher": []
        },
